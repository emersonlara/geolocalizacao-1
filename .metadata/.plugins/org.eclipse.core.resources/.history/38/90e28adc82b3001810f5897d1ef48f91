import com.aplicacao.geolocalizacao.api.mapeador.GeolocalizadorWoeidMapper;
import com.aplicacao.geolocalizacao.api.model.ClienteEntity;
import com.aplicacao.geolocalizacao.api.repository.ClienteRepository;
import com.aplicacao.geolocalizacao.api.util.WebUtils;

@Service
public class ClienteService {
	
	@Autowired
	private ClienteRepository repository;
	

	public ClienteEntity saveCustomer(ClienteEntity clienteEntity) {
		
//		String geoLocalizacao = WebUtils.getClientIp();
		
		
		return null;
		
//		System.out.println(WebUtils.getClientIp());
	}
	
	public ClienteEntity atualizarCliente(Long codigo, ClienteEntity clienteSalvo ) {
		ClienteEntity clienteOld = buscarClientePeloCodigo(codigo);
		BeanUtils.copyProperties(clienteSalvo, clienteOld, "codigo");
		return repository.save(clienteOld);
	}
	
	private ClienteEntity buscarClientePeloCodigo(Long codigo) {
		ClienteEntity clienteEntity = repository.findOne(codigo);
		if(clienteEntity == null) {
			throw new EmptyResultDataAccessException(1);
		}
		return clienteEntity;
	}

	public ClienteEntity customerProcess(ClienteEntity clienteEntity, HttpServletRequest request) {

		ArrayList<String> geoLocalizacao = new ArrayList<String>();
		
		GeolocalizadorWoeidMapper[] temperaturaLocal = new GeolocalizadorWoeidMapper();
		
		String ipCliente = WebUtils.getClientIp(request);
		
		geoLocalizacao = WebUtils.geolocalizacao(ipCliente);
		
		temperaturaLocal = WebUtils.temperaturaLocal(geoLocalizacao);
		
		
		
		
		
//		System.out.println("Geolocalização ");
//		System.out.println(geoLocalizacao);
//		System.out.println(geoLocalizacao[0]);
		
		return null;
	}

	
	
}
